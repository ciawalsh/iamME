
<table>
<tr class='days'>
  <td>Monday</td>
  <td>Tuesday</td>
  <td>Wednesday</td>
  <td>Thursday</td>
  <td>Friday</td>
  <td>Saturday</td>
  <td>Sunday</td>
</tr>
</table>
   

<section id="calendar">
  <% @day = 1%>
  <% while @day <= @number_of_days  do %>
    <% @hour = 1%>
    <div class="day" id= <%="day#{@day}"%>> </div>
      <% while @hour <= @number_of_hours %>
        <div class="hour" id= <%="hour#{@hour}"%>> </div>
        <% @hour +=1%>
      <% end%>
    <% @day +=1%>
  <%end %>
</section>
