<!DOCTYPE html>
<html>
<head>
  <title>IamME</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA1zE86HHNg61t-piIvl5BQw-hZeR5rBas">
  </script>
</head>
<body>

  <!-- <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p> -->

<nav>
  <section class='left-buttons'>
    <ul>
      <li><a><%= image_tag("settings.svg", :class => 'settings') %>
        <ul class='plus-dropdown'>
          <li><a href='#'>Profile</a></li>
          <li><a href='#'>hfdsafh</a></li>
          <li><a href='#'>hfdsafh</a></li>
        </ul>
      </li>
      <li><%= link_to image_tag("log_out.svg", :class => 'log-out'), destroy_user_session_path, :method => :delete %></li>
      <li><a><%= image_tag("search.svg", :class => 'search') %><li>
      <input class='search-field' type='text' name='search-field'>
    </ul>
  </section>

  <section class='center'><%= image_tag("ME.jpg", :class => 'logo') %>
  </section>

  <section class='right-buttons'>
    <ul>
      <li><%= link_to image_tag("create.svg", :class => 'plus'), '/users/' + current_user.id.to_s + '/events/new' %></li>
      <li><a href='#'><%= image_tag("MEmates.svg", :class => 'friends') %>
      <li><a href='#'><%= image_tag("inspireME.svg", :class => 'bunny') %>
      <li><%= link_to image_tag("map.svg", :class => 'map'), '/pages/map' %></li>
      <li><a href='#'><%= image_tag("MEcals.svg", :class => 'cal') %>
        <ul class='cal-dropdown'>
          <% current_user.calendars.each do |calendar|%>
            <li><%= link_to calendar.name, '/users/' + current_user.id.to_s + '/calendars/' + calendar.id.to_s %></li>
          <% end %>
          <li><strong><%= link_to "Add Calendar", '/users/' + current_user.id.to_s + '/calendars/new' %></strong></li>
        </ul>
      </li>
    </ul>

  </section>
</nav>


<%= yield %>

</body>

</html>
